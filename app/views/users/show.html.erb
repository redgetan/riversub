<% set_meta_tags :noindex => true %>

<div class='header-section span12'></div>
<div class="background"></div>
<div class='container '>

    <div class='row'>
      <div id='user_profile' class='span3 offset1'>
        <div id='avatar' >
          <% if @user.avatar.url.present? %>
            <div class="thumbnail">
              <%= image_tag @user.avatar.url  %>     
            </div>
          <% end %>
        </div>
          <div id='user_name'><h3><%= @user.username  %></h3></div>
          <div id='user_details'>
            <div id='user_bio'><%= @user.bio  %></div></br>
            <!-- <div id='user_email'><a href="mailto:<%= @user.email  %>"><%= @user.email  %></a></div> -->
          </div>
          <div id='stats'>
              <div id='num_of_subtitles'><span>videos subtitled count: </span><h4><%= @user.repositories.count  %></h4></div>
          </div>
      </div>

      <div id='user_repositories' class='span6 offset1'>
        <div class='container span6 '>
          <div class='row'>
            <h3 class='pull-left'>Videos Subtitled</h3>
          </div>
          <div class='row'>
            <div id='videos'>
              <ul class='thumbnails'>
                <% if user_signed_in? && current_user == @user  %>
                  <li class='span2 center'>
                    <div class='thumbnail'>
                      <a href="#" class="new_project_user_btn" data-toggle='modal' data-target='#new_project_modal'>
                        <i class='icon-plus'></i>
                        <h6>New Project</h6>
                      </a>
                    </div>
                  </li>
                <% end %>
                <% @user.repositories.each do |repo| %>
                <li class='span2 center'>
                  <div class='thumbnail'>
                    <a href="<%= repo.editor_url %>" id="<%= repo.id %>" class="video" >
                      <img src="<%= repo.thumbnail_url %>" alt="" >
                    </a>
                    <a href="<%= repo.editor_url %>" id="<%= repo.id %>" class="video" >
                      <h6 class='video_name'><%= repo.video.name %></h6>
                    </a>
                    <ul id='stats' class="unstyled">
                      <li><h6>timings: <%= repo.timings.count %></h6></li>
                    </ul>
                  </div>
                </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>

  </div>
</div>
