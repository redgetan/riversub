<% set_meta_tags :noindex => true %>

<div class='header-section col-xs-12'></div>
<div class='container '>
    <% if @user_public_uploads %>
      <%= @access_token %>
      <ul class='uploaded_items'>
        <% @user_public_uploads.each do |playlist_item| %>
          <li class='row'>
            <div class='col-md-3'><%= image_tag playlist_item["snippet"]["thumbnails"]["default"]["url"] %></div>
            <div class='col-md-3'><%= playlist_item["snippet"]["title"] %></div>
          </li>
        <% end %>
      </ul>
    <% end %>

    <div class='row'>
      <div id='user_profile' class='col-xs-12 col-md-3 col-md-offset-4'>
        <div id='avatar' >
          <% if @user.avatar.url.present? %>
            <div class="thumbnail">
              <%= image_tag @user.avatar.url  %>
            </div>
          <% end %>
        </div>
        <div id='user_name'><h3><%= @user.username  %></h3></div>
        <div id='user_details'>
          <% if @user.bio.present? %>
            <div id='user_bio'><%= @user.bio  %></div></br>
            <!-- <div id='user_email'><a href="mailto:<%= @user.email  %>"><%= @user.email  %></a></div> -->
          <% end %>
        </div>
        <div id='stats'>
          <% if @user.repositories.count < 0 %>
            <div id='num_of_subtitles'>
              <span>videos subtitled count: </span>
              <h4><%= @user.repositories.count  %></h4>
            </div>
          <% end %>
        </div>
      </div>

      <% if @user.groups.present? %>
        <div id='user_groups' class='col-xs-8 col-xs-offset-2'>
          <div class='row'>
            <h3 class='pull-left'>Groups</h3>
          </div>
          <div class='row user_groups_container'>
            <div class='user_groups_container'>
              <% @user.groups.each do |group| %>
                <div class='user_group'>
                  <a href="<%= group.url %>" class='user_group'><%= group.name %></a>
                  -
                  <%= group.description %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <% if @youtube_owner %>
      <% end %>

      <% if @user.video_bookmarks.present? %>
        <div id='user_repository_bookmarks' class='col-xs-8  col-xs-offset-2'>
          <div class='row'>
            <h3 class='pull-left'>Video Bookmarks</h3>
          </div>
          <div class='row'>
            <div class='videos'>
              <% @user.video_bookmarks.each do |repo| %>
                <div class='col-xs-6 col-md-3'>
                  <div class='thumbnail'>
                    <a href="<%= repo.url %>" id="<%= repo.id %>" class="video" >
                      <img src="<%= repo.thumbnail_url %>" alt="" >
                    </a>
                    <a href="<%= repo.url %>" id="<%= repo.id %>" class="video" >
                      <h6 class='video_name'><%= repo.video.name %></h6>
                    </a>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <% if @user.line_favorites.present? %>
        <div id='user_line_favorites' class='col-xs-8  col-xs-offset-2'>
          <div class='row'>
            <h3 class='pull-left'>Line Favorites</h3>
          </div>
          <div class='row'>
            <div class='videos'>
              <ol>
                <% @user.line_favorites.each do |subtitle| %>
                  <li>
                    <span><a href="<%= subtitle.url %>"><%= subtitle.text %></a></span>
                    <span class='pull-right'><%= subtitle.repository.title %></span>
                  </li>
                <% end %>
              </ol>
            </div>
          </div>
        </div>
      <% end %>

      <div id='user_repositories' class='col-xs-8  col-xs-offset-2'>
        <div class='row'>
          <h3 class='pull-left'>Subtitles</h3>
        </div>
        <div class='row'>
          <div class="videos">
            <% if user_signed_in? && current_user == @user  %>
              <div class='col-xs-6 col-md-3'>
                <div class='thumbnail'>
                  <a href="<%= videos_new_url %>" class="new_project_user_btn user_big_action_btn" >
                    <i class='glyphicon glyphicon-plus'></i>
                    <h6>New Project</h6>
                  </a>
                </div>
              </div>
            <% end %>
            <% @repositories.each do |repo| %>
              <div class='col-xs-6 col-md-3'>
                <div class='thumbnail'>
                  <a href="<%= user_signed_in? && current_user == @user ? repo.editor_url : repo.url %>" id="<%= repo.id %>" class="video" >
                    <img src="<%= repo.thumbnail_url %>" alt="" >
                  </a>
                  <a href="<%= repo.url %>" id="<%= repo.id %>" class="video" >
                    <h6 class='video_name'><%= repo.video.name %></h6>
                  </a>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

  </div>
</div>
