<% set_meta_tags :noindex => true %>

<div id='user_profile' class='span3'>
  <div id='avatar' >
    <% if @user.avatar.url.present? %>
      <div class="thumbnail">
        <%= image_tag @user.avatar.url  %>     
      </div>
    <% end %>
  </div>
    <div id='user_name'><h3><%= @user.username  %></h3></div>
    <div id='user_details'>
      <div id='user_bio'><%= @user.bio  %></div></br>
      <div id='user_email'><a href="mailto:<%= @user.email  %>"><%= @user.email  %></a></div>
    </div>
    <div id='stats'>
        <div id='num_of_subtitles'><span>subtitled: </span><h4><%= @user.repositories.count  %></h4></div>
    </div>
</div>

<div id='user_repositories' class='span6 offset1'>
  <h3>Videos Subtitled</h3>
  <div id='videos'>
    <ul class='thumbnails'>
      <% @user.repositories.each do |repo| %>
      <li class='span2 center'>
        <div class='thumbnail'>
          <a href="<%= repo.url %>" id="<%= repo.id %>" class="video" >
            <img src="<%= repo.thumbnail_url %>" alt="" >
          </a>
          <a href="<%= repo.url %>" id="<%= repo.id %>" class="video" >
            <h6><%= repo.video.name %></h6>
          </a>
          <ul id='stats' class="unstyled">
            <li><h6>timings: <%= repo.timings.count %></h6></li>
          </ul>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>
