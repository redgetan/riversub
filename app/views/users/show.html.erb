<% set_meta_tags :noindex => true %>

<div class='header-section col-xs-12'></div>
<div class='container '>
    <div class='row'>
      <div id='user_profile' class='col-xs-12 col-md-3'>
        <div id='avatar' >
          <% if @user.avatar.url.present? %>
            <div class="thumbnail">
              <%= image_tag @user.avatar.url  %>
            </div>
          <% end %>
        </div>
        <div id='user_name'><h3><%= @user.username  %></h3></div>
        <div id='user_details'>
          <div id='user_bio'><%= @user.bio  %></div></br>
          <!-- <div id='user_email'><a href="mailto:<%= @user.email  %>"><%= @user.email  %></a></div> -->
        </div>
        <div id='stats'>
            <div id='num_of_subtitles'><span>videos subtitled count: </span><h4><%= @user.repositories.count  %></h4>
            </div>
        </div>
      </div>

      <div id='user_groups' class='col-xs-8'>
        <div class='row'>
          <h3 class='pull-left'>Groups</h3>
        </div>
        <div class='row user_groups_container'>
          <div class='user_groups_container'>
            <% @user.groups.each do |group| %>
              <div class='user_group'>
                <a href="<%= group.url %>" class='user_group'><%= group.name %></a>
                - 
                <span>members: (<%= group.members.count %>)</span>
                <span>videos: (<%= group.repositories.published.count %>)</span>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div id='user_repositories' class='col-xs-8'>
        <div class='row'>
          <h3 class='pull-left'>Subtitles</h3>
        </div>
        <div class='row'>
          <div id='videos'>
            <% if user_signed_in? && current_user == @user  %>
              <div class='col-xs-6 col-md-3'>
                <div class='thumbnail'>
                  <a href="<%= videos_new_url %>" class="new_project_user_btn user_big_action_btn" >
                    <i class='glyphicon glyphicon-plus'></i>
                    <h6>New Project</h6>
                  </a>
                </div>
              </div>
            <% end %>
            <% @repositories.each do |repo| %>
              <div class='col-xs-6 col-md-3'>
                <div class='thumbnail'>
                  <a href="<%= user_signed_in? && current_user == @user ? repo.editor_url : repo.url %>" id="<%= repo.id %>" class="video" >
                    <img src="<%= repo.thumbnail_url %>" alt="" >
                  </a>
                  <a href="<%= repo.url %>" id="<%= repo.id %>" class="video" >
                    <h6 class='video_name'><%= repo.video.name %></h6>
                  </a>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

  </div>
</div>
