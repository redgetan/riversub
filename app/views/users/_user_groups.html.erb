<% if @user.groups.present? %>
  <div id='user_groups' class='col-xs-8 col-xs-offset-2'>
    <div class='row'>
      <h3 class='pull-left'>Groups</h3>
    </div>
    <div class='row user_groups_container'>
      <div class='user_groups_container'>
        <% @user.groups.each do |group| %>
          <div class='user_group'>
            <a href="<%= group.url %>" class='user_group'><%= group.name %></a>
            -
            <%= group.description %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
