<% set_meta_tags :site => 'Riversub', :title => 'Subtitle Tool for Youtube Videos', :description => "Riversub lets you subtitle & caption Youtube Videos." %>

<div id='demo' >
  <div id='demo-background'>
  </div>
  <div id='demo-container' class='container'>
    <div class='row center main-heading'>
      <p id='description'>Subtitle Any Youtube Video (字幕)</p>
        Instantly add captions right in the browser. Share your work afterwards.
    </div>
    <div class='row'>
      <div class='span6'>
        <iframe class="youtube-player" type="text/html" width="420" height="260" src="http://www.youtube.com/embed/pkGnKog3S2E" allowfullscreen frameborder="0">
        </iframe>
      </div>
      <div class='span6 call-to-action'>
        <div id="media_input">
          <form class="sub">
            <div class="control-group">
              <div class="input-append">
                <input name="media_url" class="media_url span4" type="text" placeholder="Paste youtube url">
                <button type="button" class="btn btn-danger sub_btn" data-loading-text="Loading...">Subtitle It</button>
              </div>
            </div>
          </form>
        </div>
        or</br> 
        <a class="btn btn-info demo_btn" href="<%= @guided_walkthrough_repo.editor_url %>">Try the Demo</a> 
      </div>
    </div>
  </div>
</div>

<div id='summary-container' class='container'>
  <div class='row'>
    <div class="videos span12">
      <h4 class="center">Recently created</h4>
      <ul class="thumbnails user">
        <% Repository.user_subtitled.recent.limit(6).each do |repo| %>
            <li class="span2">
              <div class="thumbnail center">
                <span class='repo_owner'>
                  by <a href="<%= repo.owner_profile_url %>" style="color:slategray"><%= repo.owner %></a>
                </span>
                <a href="<%= repo.url %>" id="<%= repo.id %>" class="video" >
                  <img src="<%= repo.thumbnail_url %>" alt="">
                </a>
                <a href="<%= repo.url %>" id="<%= repo.id %>" class="video" >
                  <h6 class='video_name'><%= repo.video.name %></h6>
                </a>
                <div class='stats'>
                </div>
                <span class='updated_at'><%= time_ago_in_words(repo.updated_at) %> ago</span>

              </div>
            </li>
        <% end %>
      </ul>
    </div>

  </div>
</div>

