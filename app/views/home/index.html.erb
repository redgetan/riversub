<% set_meta_tags :site => 'Yasub', :title => 'Subtitle Tool for Youtube Videos', :description => "Yasub lets you subtitle & caption Youtube Videos." %>

<div id='demo'>
  <div id='demo-background'>
  </div>
  <div id='demo-container' class='container'>
    <div class='row center main-heading'>
    </div>
    <div class='row'>
      <div class='span6'>
        <div id="river_player" data-repo='<%= @autoplay_repo ? @autoplay_repo.serialize.to_json : "" %>'>
          <div id='autoplay_video_label'>Sample</div>
          <%= render 'videos/player' %>
        </div>
      </div>
      <div class='span6 call-to-action'>
        <p id='description'>Video Subtitle Tool</p>
        <p></p>
        </br>
        <ul>
          <li>Subtitle existing online videos for FREE</li>
          <li>Supports Any Language</li>
          <li>Works even for videos you do not own</li>
          <li>Currently supports Youtube only</li>
        </ul>
        </br>
        <a class="btn btn-danger btn-large start_subtitling_btn" data-toggle='modal' data-target='#new_project_modal'>Start Subtitling</a>
      </br>
      </div>
    </div>
  </div>
</div>

<div id='summary-container'>
  <div class='container'>
    <div class='row'>
      <div class="videos span12">
        <h4 class="center">Recently created</h4>
        <ul class="thumbnails user">
          <% Repository.published.recent.limit(6).each do |repo| %>
              <li class="span2">
                <div class="thumbnail center">
                  <span class='repo_owner'>
                    by <a href="<%= repo.owner_profile_url %>" style="color:slategray"><%= repo.owner %></a>
                  </span>
                  <a href="<%= repo.url %>" id="<%= repo.id %>" class="video" >
                    <img src="<%= repo.thumbnail_url %>" alt="">
                  </a>
                  <a href="<%= repo.url %>" id="<%= repo.id %>" class="video" >
                    <h6 class='video_name'><%= repo.video.name %></h6>
                  </a>
                  <div class='stats'>
                  </div>
                  <span class='updated_at'><%= time_ago_in_words(repo.updated_at) %> ago</span>

                </div>
              </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

