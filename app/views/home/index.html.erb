<% set_meta_tags :site => 'Yasub', :title => 'Subtitle Tool for Youtube Videos', :description => "Yasub lets you subtitle & caption Youtube Videos." %>

        <div class="jumbotron">
          <div class="col-lg-6 center">
          <h2>Create Your Own Funny Subtitles</h2>
          
          </div>
       </div>
    <div class="row">
    <div class="sidebar-home col-sm-3">
      <ul class="nav nav-pills nav-stacked">
        <li><h4>Popular</h4></li>
        <li><h4>New</h4></li>
      </ul>
    </div>
    </div>
    <div class="row">
      <div class="col-sm-9 col-sm-offset-3">

      <% Repository.published.recent.limit(6).each do |repo| %>

        <div class="row templates">
          <div class="media">
            <a class="pull-left video" href="<%= repo.url %>" id="<%= repo.id %>" >
                <img src="<%= repo.thumbnail_url_hq %>" alt="" width="400" height="300">
              </a>
            <div class="media-body">
            <h4 class="media-heading"><%= repo.video.name %></h4>
            <div class="template-buttons">
              <button class="btn btn-success">Use Template</button>
              <button class="btn btn-info">Preview</button>
            </div>
          </div>
          </div>
        </div>
      <% end %>
  </div>
</div>



