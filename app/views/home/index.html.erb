<% set_meta_tags :site => 'Yasub', :title => "Subtitle your Favorite Videos", :description => "Translate or Caption your Favorite Videos from Youtube, Vimeo, and Nico Nico Douga and share it with anyone on the world" %>

<% share_text = "Subtitle your Favorite Videos" %>
<% share_description = "from Youtube, Vimeo, and Nico Nico Douga and share it with anyone on the world" %>
<% share_image_url = "#{request.protocol}#{request.host_with_port}#{asset_path("yasub_share_image.jpg")}" %>

<% content_for :head do  %>
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:image" content="<%= share_image_url %>">
  <meta name="twitter:title" content="<%= share_text %>">
  <meta name="twitter:description" content="<%= share_description %>">

  <meta property="og:url" content="<%= request.original_url %>" />
  <meta property="og:title" content="<%= share_text %>" />
  <meta property="og:description" content="<%= share_description %>" />
  <meta property="og:site_name" content="Yasub" />
  <meta property="og:image" content="<%= share_image_url %>" />
  <meta property="og:image:secure_url" content="<%= share_image_url %>" />
  <meta property="fb:app_id" content="1465538213665903" />
<% end %>

<div class='header-section col-xs-12'></div>

<h1 class='col-md-10 col-md-offset-1 center home_title'>Subtitle your Favorite Videos</h1>
<div class='center'>
  <span class='home_description'>and share it with anyone on the world</span>
  <br>
</div>

<div class='header-section col-xs-12'></div>

<div class='center'>
  <div id="river_player" class='home ' data-repo='<%= @autoplay_repo.serialize.to_json %>'>
    <div id='autoplay_video_label'>Sample</div>
    <div id='media_container'>
      <div id='viewing_screen'>
        <div id='iframe_container'>
          <div id='iframe_overlay'></div>
        </div>
        <div id='subtitle_bar'> 
          <pre id='subtitle_display' class='center'></pre>
          <pre id='subtitle_original_display' class='center'></pre>
        </div> 
      </div>
    </div>
  </div>
</div>
