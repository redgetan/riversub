<%= form_for @song do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %> </br>
  </div>

  <div class="field">
    <%= f.label :lyrics %>
    <%= f.text_area :lyrics %> </br>
  </div>

  <%= f.fields_for :media_sources, MediaSource.new do |m| %>
    <%= m.label :media_url %>
    <%= m.text_field :url %>
  <% end %>

  <%= f.submit %>
  <%= tag :input, :type => "button", :value => "Cancel", :id => "cancel"  %>

<% end %>
