<div id="player_details">
  <ul class="nav nav-tabs" >
    <li class="active"><a href="#languages_tab" data-toggle="tab">Languages</a></li>
    <li ><a href="#transcript_tab" data-toggle="tab">Transcript</a></li>
    <li ><a href="#share_tab" data-toggle="tab">Share</a></li>
  </ul>

  <div class='tab-content'>
    <div class="tab-pane <%= @repo ? @repo.languages_tab_class : "active" %>" id='languages_tab'>
      <%= render 'videos/player_repositories' %>
    </div>

    <div class="tab-pane <%= @repo ? @repo.transcript_tab_class : "" %>" id='transcript_tab'>
      <div id='transcript_container'>
        <div id='subtitle_list'></div>
      </div>
    </div>

    <div class="tab-pane" id='share_tab'>
      <% if @repo %>
        <%= render 'videos/player_share' %>
      <% end %>
    </div>

  </div>
</div>

