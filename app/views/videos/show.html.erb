<% set_meta_tags :site => 'Riversub', :title => "#{@repo.video.name}", :description => "Watch a Youtube Video with user generated captions/subtitles" %>

<div class='header-section span12'></div>

<div class='container '>

  <div id='player' data-repo='<%= @repo.serialize.to_json %>'>
    <div id='player-top' class='row'> 
      <div class='span12'> 
        <h5 id='repo_label' class="span7">
          <span class="pull-left">
            <a href="<%= @repo.short_url %>"><%= @repo.video.name %></a>
          </span>
        </h5>
      </div> 
      <div id='player-top-left' class='span7'> 
        <div id='media_container'> 
          <div id='media'></div> 
          <div id='subtitle_bar' class='span5 center'> 
            <span id='subtitle_display' class='span5 center'></span> 
          </div> 
        </div> 

        <div class='row' id="media_controls"> 
          <div class="span7">
            <h5>
              <span class="pull-left">
                <% if @repo.user %>
                  <div class="subtitler">
                    Subtitled by: <a href="<%= @repo.owner_profile_url %>"><%= @repo.owner %></a> 
                  </div>
                <% end %>
                <div class="uploader">
                  Video owned by: <a href="<%= @repo.video.uploader_url %>"><%= @repo.video.uploader_username %></a> 
                </div>
              </span>
              <% if @repo.user == current_user %>
                <a class='btn btn-success ubtitle_editor_btn pull-right' href="<%= @repo.editor_url %>"><i class="icon-random"></i> Edit</a>
              <% elsif current_user && @user_version = @repo.version_for(current_user) %>
                <a class='btn btn-success view_version_btn pull-right' href="<%= @user_version.url %>"><i class="icon-random"></i> View Your Version</a>
              <% else %>
                <a class='btn btn-success new_repo_btn pull-right' href="#"><i class="icon-random"></i> Create Sub</a>
              <% end %>
              <a class='btn share_btn pull-right' href="#" data-toggle='modal' data-target='#share_modal'>Share</a>
            </h5>
          </div>
        </div> 
      </div> 

      <div id='player-top-right' class='span5'> 
        <div id='subtitle_container'> 
          <div id='subtitle_list'></div> 
          <div id='controls_extra' class='row'> 
            <div class='btn-group pull-right'> 
              <!-- <a id='download_btn' class='btn' href='<%= @repo.subtitle_download_url %>'><i class='icon-download-alt'></i> Download</a>  -->
            </div> 
          </div> 
        </div> 
      </div> 


    </div> 

  </br>
    <div id='player-middle' class='row'> 
      <div class='span7'>
      </div>
    </div> 

  </div>    
</div>    
