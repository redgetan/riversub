<div class="primary_action_items">
  <div class="contribute action_item pull-left">
    <% if @repo.display_edit?(current_user) %>
      <a class='subtitle_editor_btn river_btn' href="<%= @repo.editor_url %>">Edit</a>
    <% end %>
  </div>
  <% if @repo.is_published? %>
    <form method="post" action="<%= @repo.fork_url %>" class="button_to fork_repo_form action_item pull-left">
      <div>
        <button type="submit" class="fork_repo_btn river_btn">
          <i class='glyphicon glyphicon-plus'></i> Subtitle 
        </button>
      </div>
    </form>

    <div class='share_repo action_item pull-left'>
      <a class='river_btn share_repo_btn' href='#'><i class='glyphicon glyphicon-chevron-down'></i> Share</a>
    </div>
  <% else %>
    <%= form_tag @repo.publish_url, method: "post", class: "publish_btn_form" do %>
      <%= submit_tag 'Publish', class: "river_btn", id: "publish_btn" %>
    <% end %>
  <% end %>
  <div class='transcript_tab_nav action_item pull-right'>
    <a class='river_btn transcript_tab_btn <%= @repo.transcript_tab_class %>' href='#transcript_tab' data-toggle='tab'>Show Transcript</a>
  </div>
  <div class='comments_tab_nav action_item pull-right'>
    <a class='river_btn comments_tab_btn <%= @repo.comments_tab_class %>' href='#comments_tab' data-toggle='tab'>Show Comments</a>
  </div>
</div>

<div class='share_container' style='display: none;'>
  <div class="link_container">
    <span class="">Link</span>
    <input class="share_link_input" value="<%= @repo.url %>" type="text" onclick="this.select()">
    <span class="social_share_container">
      <a href="https://www.facebook.com/sharer/sharer.php?u=<%= @repo.url %>" target="_blank">
         <%= image_tag "fb-32.png" %>
      </a>
      <a href="https://twitter.com/share?url=<%= @repo.url %>" target="_blank">
         <%= image_tag "twitter-32.png"  %>
      </a>
      <a href="https://plus.google.com/share?url=<%= @repo.url %>" target="_blank">
         <%= image_tag "gplus-32.png"  %>
      </a>
    </span>
  </div>
</div>
