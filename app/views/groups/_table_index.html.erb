<table class='topics_table col-md-8 col-md-offset-2'>
  <tr>
    <th>Topic</th>
    <th>Subtitles</th>
    <th>Description</th>
    <!-- <th>Subtitles</th> -->
    <!-- <th>Requests</th> -->
  </tr>

<% @groups.each do |group| %>
  <tr onclick="document.location = '<%= group.url %>';">
    <td class="group_name"><%= group.name %></td>
    <td class="group_members_count"><%= group.repositories.published.count %></td>
    <td class="group_description"><%= truncate(group.raw_description, length: 200) %></td>
  </tr>
<% end %>
</table>

