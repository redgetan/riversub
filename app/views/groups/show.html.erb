<div class='header-section span12'></div>
<div class="background"></div>
<div class='container'>
  <div class='row center'>
    <div class="col-xs-12">
      <span class="title river_gray"><%= @group.name %></span>
      <p>
        <%= @group.description %>
      </p>
      <% if can?(:edit, @group) %>
        <p>
          <span>[<%= link_to 'Edit', edit_group_path(@group) %>]</span>
        </p>
      <% end %>
    </div>
  </div>


  <h3 class="group_releases_header river_gray col-xs-offset-1">
    Releases
    <% if can?(:edit, @group) %>
      <span class="new_group_release_btn">[<%= link_to 'Create New Release', new_group_release_path(@group) %>]</span>
    <% end %>
  </h3>
  <div class='row center group_release_container'>
    <div class="col-xs-9 col-xs-offset-1">
      <ul>
        <% @group.releases.each do |release| %>
          <% if can?(:read, release) %>
            <li class="group_release_list_item">
              <div class="group_release_list_item_header">
                <a class="group_release_number" href="<%= release.url %>">Issue <%= release.release_number %></a>
                - 
                <%= release.date.strftime("%b %-d, %Y") %>
                <div class='pull-right'>
                  <% release.repositories.each do |repo| %>
                      <img src="<%= repo.video.thumbnail_url %>" class="" alt="">
                  <% end %>
                </div>
              </div>
              <ul>
                <% release.repositories.each do |repo| %>
                  <li class="group_release_list_item_repo river_gray">
                    <span class='video_name'><%= repo.release_title %></span>
                    <% unless repo.release_title == repo.video.title %>
                      <span class='orig_video_name river_gray pull-right'><%= repo.video.title %></span>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
