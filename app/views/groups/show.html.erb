<div class='header-section span12'></div>
<div class="background"></div>
<div class='container'>
  <div class='row center'>
    <div class="span12">
      <span class="title river_gray"><%= @group.name %></span>
      <p>
        <%= @group.description %>
      </p>
      <p>
        <span>[<%= link_to 'Edit', edit_group_path(@group) %>]</span>
      </p>
    </div>

  </div>
  <div class='row'>

    <div id="group_repositories_container" class="span8 offset2">
      <h4>Ready for Youtube Integration</h2>
      <ul class="unimported_repositories_container">
        <% @group.unimported_repositories_grouped_by_video.each do |video, repositories| %>
          <li>
            <%= video.name %>
            <ul class='repo_language_container'>
              <% repositories.each do |repo| %>
                <li class='repo_language'>
                  <%= repo.language_display %>
                  <% if repo.youtube_imported? %>
                    <a href="#">youtube_subtitle_link</a>
                  <% else %>
                    <div class="unimported_repository_controls pull-right">
                      |
                      <a href="<%= repo.url %>" class='repo_url'>Preview</a>
                      |
                      <a href="#" class='youtube_import_btn'>Youtube Import</a>
                    </div>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </li>
        <% end %>
      </ul>
      <h4>Archives</h2>
      <ul class="imported_repositories_container">
        <% @group.imported_repositories_grouped_by_video.each do |video, repositories| %>
          <li>
            <%= video.name %>
            <ul class='repo_language_container'>
              <% repositories.each do |repo| %>
                <li class='repo_language'>
                  <%= repo.language_display %>
                  <a href="#">youtube_subtitle_link</a>
                </li>
              <% end %>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
