<div class='header-section span12'></div>
<div class="background"></div>
<div class='container'>
  <div class='row center'>
    <div class="col-xs-12">
      <span class="title river_gray"><%= @group.name %></span>
      <p>
        <%= @group.description %>
      </p>
      <% if can?(:edit, @group) %>
        <p>
          <span>[<%= link_to 'Edit', edit_group_path(@group) %>]</span>
        </p>
      <% end %>
    </div>
  </div>

  <div class='row'>
    <div class="left_column col-xs-12 col-md-4">
      <div class='group_requests section_block'>
        <div class="section_header">
          Requests
        </div>
        <div class="section_body">
          <div class='center'>
            <a href="<%= video_request_new_url(:group_id => @group.id) %>" class="request_btn">+ Add</a>
          </div>

          <ul class="requests_list">
            <% @group.requests.each do |request| %>
              <li><a href="<%= request.video.source_url %>"><%= request.video.title %></a></li>
            <% end %>  
          </ul>
        </div>
      </div>

      <div class='group_translators section_block'>
        <div class="section_header">
          Translators
        </div>
        <div class="section_body">

          <ul class="members_list">
            <% @group.translators.each do |user| %>
              <li>
                <span class=''><%= user.username %></span>
              </li>
            <% end %>  
          </ul>
        </div>
      </div>

      <div class='group_members section_block'>
        <div class="section_header">
          Members
        </div>
        <div class="section_body">

          <ul class="members_list">
            <% @group.members.each do |member| %>
              <li><%= member.username %></li>
            <% end %>  
          </ul>
        </div>
      </div>

    </div>

    <div class='groups_videos videos videos_container col-xs-12 col-md-8 section_block'>
      <div class="section_header">
        Videos
      </div>
      <div class="home_try section_body">

        <p style="padding: 20px 0px 0px 50px;">Add subtitles to any existing youtube video using our Free Online Subtitle Editor. Published translations would be shown below</p>

        <form class="sub">
          <div class="subtitle_video_container input-group">
            <div class="input-append">
              <input name="source_url" class="source_url" type="text" placeholder="Paste youtube url">
              <button type="button" class="river_btn sub_btn" data-loading-text="Loading...">Subtitle</button>
            </div>
          </div>
        </form>

        <% @group.published_repositories.each do |repo| %>
          <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
              <div class="video_thumb">
                <a href="<%= repo.url %>" id="<%= repo.id %>" class="video" >
                  <img src="<%= repo.thumbnail_url %>" alt="">
                </a>
              </div>
              <div class="video_title">
                <a href="<%= repo.url %>" id="<%= repo.id %>" class="video" >
                  <h4 class='video_name'><%= repo.title %></h4>
                </a>
              </div>
              <div class="transcript_preview">
                <%= repo.transcript[0..200] %>
              </div>
              <!-- <span class='updated_at'><%= time_ago_in_words(repo.updated_at) %> ago</span> -->
              <span class='repo_owner'>
                by 
                <a href="<%= repo.owner_profile_url %>" style="color:slategray"><%= repo.owner %></a>
              </span>
              <div class='stats'>
              </div>
            </div>
          </div>
        <% end %>

      </div>
    </div>

  </div>




