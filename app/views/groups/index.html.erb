<div class='header-section col-xs-12'></div>
<div class="background"></div>
<div class='group_index_container container'>

  <div class='center'>
  </div>

  <div class='group_list row'>
    <div class="col-xs-8 col-xs-offset-2">
      <%= link_to 'Create new group', new_group_path, class: "new_group_btn btn btn-primary" %>
      <table>
        <tr>
          <th>Group</th>
          <th>Members</th>
          <th>Description</th>
          <!-- <th>Subtitles</th> -->
          <!-- <th>Requests</th> -->
        </tr>

      <% @groups.sort_by { |group| group.members.count }.reverse.each do |group| %>
        <tr>
          <td class="group_name"><a href="<%= group.url %>"><%= group.name %></a></td>
          <td class="group_members_count"><%= group.members.count %></td>
          <td class="group_description"><%= group.description %></td>
          <!-- <td class="group_subtitles_count"><%= group.published_repositories.count %></td> -->
          <!-- <td class="group_requests_count"><%= group.requests.count %></td> -->
        </tr>
      <% end %>
      </table>

      <br />
      <br />
      <div class='center'>
      </div>
      <br>
    </div>
  </div>


  <div class='header-section col-xs-12'></div>

</div>
