<div class='header-section col-xs-12'></div>
<div class="background"></div>
<div class='group_index_container container'>

  <div class='center'>
  </div>

  <div class='group_list row'>
    <div class="center">
      <h2>List of Groups</h2>
      <br>
      <br>
      <%= link_to '+ Create your group', new_group_path, class: "new_group_btn btn btn-danger" %>
    </div>
      
    <div class='home_group_list_container col-md-10 col-md-offset-2 col-xs-10 col-xs-offset-1'>
      <% Group.all.sort_by { |group| group.members.count }.reverse.each_slice(5) do |groups| %>
        <div class='home_group_row'>
          <% groups.each do |group| %>
            <a href="<%= group.url %>" class="home_group_item col-md-2 col-xs-12">
              <div class='avatar' >
                <div class="thumbnail">
                  <%= image_tag group.avatar.url  %>
                </div>
              </div>
              <span class="title river_gray"><%= group.name %></span>
              <p class='group_description'>
                <%= group.description %>
              </p>
            </a>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>


  <div class='header-section col-xs-12'></div>

</div>
