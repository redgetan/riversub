<% is_signup = params[:controller] == "registrations" %>

<div class="social_login_container center">
  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_url(resource_name) %><br />
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_url(resource_name) %><br />
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <ul class="social_login_buttons">
      <% resource_class.omniauth_providers.each do |provider| %>
      <li>
        <a class="btn btn-<%= social_button_provider_name(provider) %>" href="<%= user_omniauth_authorize_path(provider) %>">
          <i class="fa fa-<%= font_awesome_provider_name(provider) %>"></i>
          <% if is_signup %>
            Signup with <%= user_facing_provider_name(provider).to_s.titleize %>
          <% else %>
            Login with <%= user_facing_provider_name(provider).to_s.titleize %>
          <% end %>
        </a>
      </li>
      <% end %>
    </ul>
  <% end %>
</div>

