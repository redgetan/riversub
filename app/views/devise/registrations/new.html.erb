<% set_meta_tags :noindex => true %>

<div class='container '>
    <div class='row'>
        <div class='span4 offset4'>
            <div class='header-section span12'></div>
            <%= render "devise/shared/links" %>

            <%= form_for(resource, :as => resource_name, :url => registration_url(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              </br><%= f.text_field :username, :placeholder => "username", class: "span4" %>

              </br><%= f.email_field :email, :placeholder => "email", class: "span4" %>

              </br><%= f.password_field :password, :placeholder => "password", class: "span4" %>

              <div><%= f.submit "Sign up", :class => 'btn pull-right' %></div>
            <% end %>

        </div>
    </div>
</div>

