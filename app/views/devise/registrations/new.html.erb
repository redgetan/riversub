<% set_meta_tags :noindex => true %>

<div class='header-section col-xs-12'></div>

<div class='container'>
    <div class='row'>
        <div class="col-xs-3 center">
            <h1>Join Us</h1>
        </div>
        <div class='col-xs-3 center sign_up_container'>
            <%= render "devise/shared/links" %>

            <div class="or_login_separator center">
              or
            </div>

            <div class="signup_container">
              <%= form_for(resource, :as => resource_name, :url => registration_url(resource_name)) do |f| %>
                <%= devise_error_messages! %>

                <%= f.text_field :username, :placeholder => "username", class: "form-control" %>

                <%= f.email_field :email, :placeholder => "email", class: "form-control" %>

                <%= f.password_field :password, :placeholder => "password", class: "form-control" %>

                <%= f.submit "Sign up", :class => 'btn btn-primary pull-right' %>
              <% end %>
            </div>
        </div>
    </div>
</div>
<div class='header-section col-xs-12'></div>

