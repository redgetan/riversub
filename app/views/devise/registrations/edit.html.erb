
<div class='header-section col-xs-12'></div>
<div class='container '>
  <div class='row'>

    <div id='edit_user_sidebar' class='col-xs-4 col-xs-offset-1'>
      <ul class="nav nav-tabs nav-stacked">
        <li><a id='account' href="#account"><i class="glyphicon glyphicon-chevron-right"></i>Account</a></li>
        <li><a id='password' href="#password"><i class="glyphicon glyphicon-chevron-right"></i>Password</a></li>
      </ul>
    </div>

    <div id='edit_user_content' class='col-xs-6 col-xs-offset-1'>
      <%= form_for(resource, :as => resource_name, :url => registration_url(resource_name), :html => { :id => 'edit_account', :method => :put, :multipart => true }) do |f| %>

        <div id='avatar' >
          <%= f.label :photo %>
          <% if current_user.avatar.url.present? %>
            <div class="thumbnail">
              <%= image_tag current_user.avatar.url  %>
            </div>
          <% end %>
        </div>

        <span id='upload_photo_btn' class="btn btn-primary btn-file">
          <div id='upload_btn_label'>
            Change Photo
          </div>
          <%= f.file_field :avatar %>
          <%= f.hidden_field :avatar_cache %>
        </span >

        <br/>
        <br/>
        <div class='form-group'><%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %></div>

        <div class='form-group'><%= f.label :bio %>
        <%= f.text_area :bio, :rows => '7', :cols => '30', :maxlength => '500', class: "form-control" %></div>

        <div class='form-group'>
          <%= f.label :allow_subtitle_download, "Allow anyone to download your subtitles" %>
          <%= f.select :allow_subtitle_download, [true, false], style: "clear: both;"  %>
        </div>

        <div class='form-group'><%= f.submit "Save Changes", :class => 'btn btn-primary btn-large' %></div>

      <% end %>

      <%= form_for(resource, :as => resource_name, :url => registration_url(resource_name), :html => { :id => 'edit_password', :method => :put, :multipart => true }) do |f| %>

        <div class="form-group"><%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, :autocomplete => "off", class: "form-control" %></div>

        <div class="form-group"><%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control" %></div>

        <div class="form-group"><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, class: "form-control" %></div>

        <div class="form-group"><%= f.submit "Save Changes", :class => 'btn btn-info btn-large' %></div>

      <% end %>

    </div>

        <div class='row'>
          <div class='col-xs-4 col-xs-offset-6'>

    <!--         <p>Unhappy? <%= link_to "Cancel my account", registration_url(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>
     -->
          </div>
        </div>

  </div>
</div>